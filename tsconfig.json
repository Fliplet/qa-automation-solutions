{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true
  },
  "include": [
    "tests/**/*.ts",
    "page-objects/**/*.ts",
    "global-setup/**/*.ts",
    "utils/**/*.ts",
    "test-data/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".cursorrules"
  ]
} 